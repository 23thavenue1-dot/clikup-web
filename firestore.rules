rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    /**
     * @description Enforces owner-only access for user profiles.
     * @path /users/{userId}
     * @allow (create) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can create their own profile.
     * @allow (get) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can get their own profile.
     * @allow (update) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can update their own profile.
     * @allow (delete) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can delete their own profile.
     * @deny (create) User 'otherUserId' cannot create a profile for 'lflVJTBNAJQZWlAucsmCg8ZqcZv1'.
     * @deny (get) User 'otherUserId' cannot get the profile for 'lflVJTBNAJQZWlAucsmCg8ZqcZv1'.
     * @deny (update) User 'otherUserId' cannot update the profile for 'lflVJTBNAJQZWlAucsmCg8ZqcZv1'.
     * @deny (delete) User 'otherUserId' cannot delete the profile for 'lflVJTBNAJQZWlAucsmCg8ZqcZv1'.
     * @principle Enforces document ownership for writes and reads.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Enforces owner-only access for images within a user's subcollection.
     * @path /users/{userId}/images/{imageId}
     * @allow (create) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can create an image in their own subcollection.
     * @allow (get) Any user can read the image data.
     * @allow (list) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can list images in their own subcollection.
     * @allow (update) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can update an image in their own subcollection.
     * @allow (delete) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can delete an image in their own subcollection.
     * @deny (create) User 'otherUserId' cannot create an image in 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' subcollection.
     * @deny (update) User 'otherUserId' cannot update an image in 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' subcollection.
     * @deny (delete) User 'otherUserId' cannot delete an image in 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' subcollection.
     * @principle Enforces document ownership for writes, allows public reads.
     */
    match /users/{userId}/images/{imageId} {
      allow get: if true;
      allow list: if true;
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

     /**
      * @description Enforces owner-only access for notes within a user's subcollection.
      * @path /users/{userId}/notes/{noteId}
      * @allow (create) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can create a note in their own subcollection.
      * @allow (get) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can get a note in their own subcollection.
      * @allow (list) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can list notes in their own subcollection.
      * @allow (update) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can update a note in their own subcollection.
      * @allow (delete) User 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' can delete a note in their own subcollection.
      * @deny (create) User 'otherUserId' cannot create a note in 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' subcollection.
      * @deny (get) User 'otherUserId' cannot get a note in 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' subcollection.
      * @deny (list) User 'otherUserId' cannot list notes in 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' subcollection.
      * @deny (update) User 'otherUserId' cannot update a note in 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' subcollection.
      * @deny (delete) User 'otherUserId' cannot delete a note in 'lflVJTBNAJQZWlAucsmCg8ZqcZv1' subcollection.
      * @principle Enforces document ownership for reads and writes.
      */
     match /users/{userId}/notes/{noteId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Grants admin access to users with a document in this collection.
     * @path /roles_admin/{adminId}
     * @allow (create) Only admins can create admin roles (unusual, but supported for completeness).
     * @allow (get) Any admin can read any admin role.
     * @allow (update) Any admin can update any admin role.
     * @allow (delete) Any admin can delete any admin role.
     * @deny (create) Non-admins cannot create admin roles.
     * @deny (get) Non-admins cannot read admin roles.
     * @deny (update) Non-admins cannot update admin roles.
     * @deny (delete) Non-admins cannot delete admin roles.
     * @principle Role-based access control for administrative privileges.
     */
    match /roles_admin/{adminId} {
      allow get: if isAdmin();
      allow list: if false;
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
  }
}