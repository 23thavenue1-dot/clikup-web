rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Les utilisateurs peuvent lire et écrire uniquement leurs propres fichiers dans leur dossier personnel.
    // Le chemin de stockage utilisé dans le code est `uploads/{userId}/...`
    match /uploads/{userId}/{allFiles=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
