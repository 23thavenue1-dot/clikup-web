
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Les utilisateurs ne peuvent gérer que leurs propres images.
    // Le chemin doit correspondre à celui utilisé dans src/lib/storage.ts
    match /users/{userId}/images/{imageId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
