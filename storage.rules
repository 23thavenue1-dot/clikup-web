
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Autoriser la lecture de toutes les images par tout le monde (public)
    match /users/{userId}/{allPaths=**} {
      allow read;
      // Autoriser l'écriture (création, mise à jour, suppression) uniquement par l'utilisateur propriétaire
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
