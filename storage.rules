rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Autorise l'écriture uniquement dans le dossier personnel de l'utilisateur.
    // Le chemin doit correspondre à celui construit dans le code client (`src/lib/storage.ts`).
    match /uploads/{uid}/{fileId} {
      // Un utilisateur authentifié peut écrire dans son propre dossier.
      // On vérifie aussi la taille du fichier et le type de contenu.
      allow write: if request.auth != null &&
                      request.auth.uid == uid &&
                      request.resource.size < 10 * 1024 * 1024 &&
                      request.resource.contentType.matches('image/.*');

      // Un utilisateur authentifié peut lire les fichiers dans son propre dossier.
      allow read: if request.auth != null && request.auth.uid == uid;
    }
  }
}
