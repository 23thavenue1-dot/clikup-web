
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Fait correspondre n'importe quel fichier dans le dossier d'un utilisateur.
    match /users/{userId}/{allPaths=**} {
      // Autorise la lecture et l'écriture (y compris la suppression) si l'UID de l'utilisateur qui fait la requête
      // correspond au {userId} dans le chemin du fichier.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
