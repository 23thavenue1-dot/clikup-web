
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
  
    // Règle générale : Bloquer tout par défaut
    match /{allPaths=**} {
      allow read, write: if false;
    }
    
    // Règle pour les uploads utilisateurs :
    // - L'utilisateur doit être authentifié (request.auth != null)
    // - L'utilisateur ne peut écrire que dans son propre dossier (request.auth.uid == userId)
    // - Le chemin doit commencer par "uploads/"
    // - Le nom du fichier est ici représenté par {fileId}
    match /uploads/{userId}/{fileId} {
      // Écriture (create, update, delete)
      allow write: if request.auth != null && request.auth.uid == userId;

      // Lecture (get)
      // On autorise la lecture si l'utilisateur est authentifié. 
      // Si vous voulez que les images soient publiques, remplacez par `allow read: if true;`
      allow read: if request.auth != null;
    }

    // Ajout d'une règle plus spécifique pour la taille et le type de fichier
    match /uploads/{userId}/{fileId} {
        allow create: if request.auth != null && request.auth.uid == userId
                      && request.resource.size < 10 * 1024 * 1024 // Limite à 10 Mo
                      && request.resource.contentType.matches('image/.*'); // Accepte tous les types d'images
    }
  }
}
