rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permet à n'importe qui de lire les fichiers (par exemple, pour les afficher dans l'application)
    match /uploads/{userId}/{allPaths=**} {
      allow read;
      // Permet à un utilisateur authentifié d'écrire des fichiers uniquement dans son propre dossier.
      // Le chemin demandé (request.path) doit correspondre au dossier de l'utilisateur (request.auth.uid).
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
