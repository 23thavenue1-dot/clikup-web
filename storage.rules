rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Règle pour la galerie principale des utilisateurs
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Règle pour les avatars des utilisateurs
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Règle pour les images des brouillons et posts programmés
    match /scheduledPosts/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
