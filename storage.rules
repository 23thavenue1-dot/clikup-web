rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Fichiers dans un dossier spécifique à l'utilisateur
    match /uploads/{userId}/{allPaths=**} {
      // Seul l'utilisateur authentifié peut lire ou écrire dans son propre dossier
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
